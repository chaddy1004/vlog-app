<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MainActivity">

    <com.chaddysroom.vloggingapp.utils.MovableFloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_gravity="bottom|end"
            app:srcCompat="@drawable/shutter_button"
            android:id="@+id/pictureShutterButton"
            app:layout_constraintRight_toRightOf="parent"
            android:elevation="100dp"
            android:layout_marginEnd="48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />

    <SurfaceView android:layout_width="fill_parent"
                 android:layout_height="fill_parent"
                 android:id="@+id/cameraView"
                 app:layout_constraintLeft_toLeftOf="parent"
                 app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintBottom_toTopOf="@id/panel"
                 app:layout_constraintRight_toRightOf="parent">
    </SurfaceView>

    <SurfaceView android:layout_width="fill_parent"
                 android:layout_height="fill_parent"
                 android:id="@+id/overlayView"
                 app:layout_constraintLeft_toLeftOf="parent"
                 app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintBottom_toTopOf="@id/panel"
                 app:layout_constraintRight_toRightOf="parent" app:layout_constraintHorizontal_bias="0.0"
                 app:layout_constraintVertical_bias="1.0">
    </SurfaceView>

    <android.support.constraint.ConstraintLayout
            android:id="@+id/panel"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="parent">


        <Button  android:layout_width="wrap_content"
                 android:id="@+id/shutter_button"
                 android:layout_height="wrap_content"
                 android:background="@drawable/shutter_button"
                 app:layout_constraintLeft_toLeftOf="parent"
                 app:layout_constraintRight_toRightOf="parent"
                 app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintBottom_toBottomOf="parent"
                 android:layout_marginBottom="0dp"/>



        <ImageButton android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:id="@+id/cameraswap_button"
                     android:src="@drawable/ic_switch"
                     android:backgroundTint="@color/colorWhite"
                     app:layout_constraintTop_toTopOf="parent"
                     app:layout_constraintBottom_toBottomOf="parent"
                     app:layout_constraintRight_toRightOf="parent"
                     app:layout_constraintLeft_toRightOf="@id/shutter_button"/>




    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>