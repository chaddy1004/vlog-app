<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                                android:id="@+id/effect_parent_layout">


    <android.widget.ImageView
            android:layout_height="64dp"
            android:layout_width="64dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/effect_description"
            android:id="@+id/effect_thumbnail"/>

    <android.widget.TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:layout_constraintStart_toEndOf="@id/effect_thumbnail"
            app:layout_constraintTop_toTopOf="@+id/effect_thumbnail"
            android:id="@+id/effect_name"
            android:text="EFFECT_i: TITLE"
    />

    <android.widget.TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/effect_name"
            app:layout_constraintLeft_toRightOf="@+id/effect_thumbnail"
            android:id="@+id/effect_description"
            android:text="EFFECT_i: DESCRIPTION"
    />
</android.support.constraint.ConstraintLayout>